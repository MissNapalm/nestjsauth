# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password
SENDER_EMAIL=your-email@gmail.com

# JWT Secret - CRITICAL: Generate a secure random string
# Generate with: openssl rand -hex 64
JWT_SECRET=generate-a-secure-64-byte-hex-string-here

# PostgreSQL Database URL
DATABASE_URL="postgresql://username:password@localhost:5432/nestauth"

# CORS Allowed Origins (comma-separated for multiple)
ALLOWED_ORIGINS=http://localhost:3000
